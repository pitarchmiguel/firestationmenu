---
import menuData from './menu.json'; // Ruta correcta del archivo JSON

// Acceder a las categor√≠as
const categories = menuData.menu;
---

<ul>
    {categories.map(category => (
      <li>
        <a href={`/categoria/${category.id}`}>{category.category}</a>
      </li>
    ))}
  </ul>
  
<style>
    ul {
        list-style: none;
        padding: 0;
        display: grid;
        place-items: center;
        flex-direction: column;
        gap: 0.7rem;
    }

    li {
        padding: .9rem;
        font-size: 1rem;
        border: 1px solid #dadada;
        border-radius: 0.8rem;
        width: 90%;
        text-align: center;
    }
</style>